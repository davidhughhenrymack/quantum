
include "library";

/** MEMORY **/

qureg seek(quconst memory, int i) {
	return memory[i*width :: width];
}


/** CPU EXECUTION **/

cond qufunct fetch(quconst addr, qureg mem, qureg dest) 
{
	const cells = #mem/width;

	qureg o[cells];
	int cell;

	for cell = 0 to cells - 1
	{
		eq(addr,cell,o[0::1]);
		// dump o;
		// dump mem;
		if o[0::1] { Swap(seek(mem,cell),dest); }
		!eq(addr,cell,o[0::1]);
	}	
}

cond qufunct fetch2(quconst addr, quconst mem, quvoid dest) 
{
	const cells = #mem/width;
	int cell;

	quscratch o[cells];

	for cell = 0 to cells - 1
	{
		eq(addr,cell,o[cell::1]);
		if o[cell::1] { 
			Fanout(seek(mem, cell), dest);
		}
		// !eq(addr,cell,o[cell::1]);
	}
}


cond qufunct execute(quconst inst, qureg a, qureg b, qureg ip) 
{
	qureg o[1];

	eq(inst, 1, o);
	if o { inc(a); }
	!eq(inst, 1, o);

	eq(inst, 2, o);
	if o { inc(b); }
	!eq(inst, 2, o);

	eq(inst, 3, o);
	if o { inc(a); }
	!eq(inst, 3, o);

}

